<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/actTax_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_marginTop="25dip"
            android:text="@string/taxBracket"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/actTax_editText1"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/actTax_textView1"
            android:layout_marginLeft="25dip"
            android:layout_toRightOf="@+id/actTax_textView1"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:maxWidth="100dip" />
        
        <TextView
	        android:id="@+id/actTax_editText1_unit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/actTax_editText1"
	        android:layout_alignBottom="@+id/actTax_editText1"
	        android:layout_marginBottom="6dip"
	        android:layout_marginLeft="3dip"
	        android:text="@string/unit_percent"
	        android:textSize="15sp"/>        

        <TextView
	       android:id="@+id/actTax_textView2"
	       android:layout_width="fill_parent" 
           android:layout_height="fill_parent" 
           android:gravity="center"
	       android:layout_below="@+id/actTax_textView1"
	       android:layout_marginTop="10dip"
	       android:text="@string/taxBracketHelp"
	       android:textSize="15sp" />      
        
    </RelativeLayout>
    
</ScrollView>    
