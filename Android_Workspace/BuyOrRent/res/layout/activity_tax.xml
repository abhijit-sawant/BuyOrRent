<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/actTax_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:text="@string/taxBracket"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/actTax_editText1"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/actTax_textView1"
            android:layout_marginLeft="25dip"
            android:layout_toRightOf="@+id/actTax_textView1"
            android:inputType="number"
            android:maxWidth="100dip" />

        <SeekBar
            android:id="@+id/actTax_seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/actTax_textView1"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:layout_toRightOf="@+id/actTax_editText1" />      
        
    </RelativeLayout>
    
</ScrollView>    
