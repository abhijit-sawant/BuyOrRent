<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actBuy_scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
             
        <TextView
	        android:id="@+id/actBuy_textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="25dip"
	        android:text="@string/housePrice"
	        android:textSize="15sp"/>

	    <EditText
	        android:id="@+id/actBuy_editText1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/actBuy_textView1"
	        android:layout_marginLeft="60dip"
	        android:layout_toRightOf="@+id/actBuy_textView1"
	        android:inputType="numberDecimal"
	        android:minWidth="100dip" />
	    
	    <SeekBar
	        android:id="@+id/actBuy_seekBar1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/actBuy_textView1"
	        android:layout_centerInParent="true"
	        android:layout_marginLeft="2dip"
	        android:layout_marginRight="2dip"
	        android:layout_marginBottom="8dip"
	        android:layout_toRightOf="@+id/actBuy_editText1" />
	    
	   <TextView
	       android:id="@+id/actBuy_textView2"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignParentLeft="true"
	       android:layout_below="@+id/actBuy_textView1"
	       android:layout_marginTop="40dip"
	       android:text="@string/downPay"
	       android:textSize="15sp"/>
	        
	    <EditText
	        android:id="@+id/actBuy_editText2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/actBuy_textView2"
	        android:layout_alignLeft="@+id/actBuy_editText1"
	        android:inputType="numberDecimal"
	        android:minWidth="100dip"/>
	    
	     <SeekBar
	        android:id="@+id/actBuy_seekBar2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/actBuy_textView2"
	        android:layout_centerInParent="true"
	        android:layout_marginLeft="2dip"
	        android:layout_marginRight="2dip"
	        android:layout_marginBottom="8dip"
	        android:layout_toRightOf="@+id/actBuy_editText2" />
	
	
	    <TextView
	        android:id="@+id/actBuy_textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/actBuy_textView2"
	        android:layout_marginTop="40dip"
	        android:text="@string/intRate"
	        android:textSize="15sp"/>
	
	    <EditText
	        android:id="@+id/actBuy_editText3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/actBuy_textView3"
	        android:layout_alignLeft="@+id/actBuy_editText2"
	        android:inputType="numberDecimal"
	        android:minWidth="100dip"/>
	    
	    <SeekBar
	        android:id="@+id/actBuy_seekBar3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/actBuy_textView3"
	        android:layout_centerInParent="true"
	        android:layout_marginLeft="2dip"
	        android:layout_marginRight="2dip"
	        android:layout_marginBottom="8dip"
	        android:layout_toRightOf="@+id/actBuy_editText3" />
	
	
	    <TextView
	        android:id="@+id/actBuy_textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/actBuy_textView3"
	        android:layout_marginTop="40dip"
	        android:text="@string/tenure"
	        android:textSize="15sp"/>
	
	    <EditText
	        android:id="@+id/actBuy_editText4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/actBuy_editText3"
	        android:layout_alignBottom="@+id/actBuy_textView4"
	        android:inputType="numberDecimal"
	        android:minWidth="100dip"/>
	    
	     <SeekBar
	        android:id="@+id/actBuy_seekBar4"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/actBuy_textView4"
	        android:layout_centerInParent="true"
	        android:layout_marginLeft="2dip"
	        android:layout_marginRight="2dip"
	        android:layout_marginBottom="8dip"
	        android:layout_toRightOf="@+id/actBuy_editText4" />
	     
	     <TextView
	        android:id="@+id/actBuy_textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/actBuy_textView4"
	        android:layout_marginTop="40dip"
	        android:text="@string/holdPeriod"
	        android:textSize="15sp"/>
	
	    <EditText
	        android:id="@+id/actBuy_editText5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/actBuy_editText4"
	        android:layout_alignBottom="@+id/actBuy_textView5"
	        android:inputType="numberDecimal"
	        android:minWidth="100dip"/>
	    
	     <SeekBar
	        android:id="@+id/actBuy_seekBar5"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/actBuy_textView5"
	        android:layout_centerInParent="true"
	        android:layout_marginLeft="2dip"
	        android:layout_marginRight="2dip"
	        android:layout_marginBottom="8dip"
	        android:layout_toRightOf="@+id/actBuy_editText5" />
	     
	    <View
	        android:id="@+id/actBuy_yearlyExpDivider"
			android:layout_width="fill_parent"
			android:layout_below="@+id/actBuy_textView5"
			android:layout_marginTop="25dip"
			android:layout_height="1dp"
			android:background="@android:color/darker_gray"/>
	     
	     <RelativeLayout
	         android:id="@+id/actBuy_layoutYearlyBorder"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_below="@+id/actBuy_yearlyExpDivider">
	     
		     <RelativeLayout
		         android:id="@+id/actBuy_layoutYearlyTitle"
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content"
		         android:gravity="center_vertical|center_horizontal"
		         android:layout_marginTop="20dip">
		         
		        <TextView
		            android:id="@+id/actBuy_textYearlyTitle"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
					android:layout_alignParentLeft="true" 
		            android:text="@string/yearlyExpenses"
		            android:textColor="#ff33b5e5"
		            android:textStyle="bold"/>

		        <ImageView
		            android:id="@+id/actBuy_imageYearlyArrow"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="20dp" 
		            android:src="@android:drawable/arrow_down_float" />
		        
		     </RelativeLayout>
		     
		    <RelativeLayout
		        android:id="@+id/actBuy_layoutYearlyContent"
		        android:visibility="gone"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/actBuy_layoutYearlyTitle" >
		     
			     <TextView
			        android:id="@+id/actBuy_textView6"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="25dip"
			        android:text="@string/yearTax"
			        android:textSize="15sp"/>
			
			    <EditText
			        android:id="@+id/actBuy_editText6"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:layout_alignBottom="@+id/actBuy_textView6"
		        	android:layout_marginLeft="70dip"
		        	android:layout_toRightOf="@+id/actBuy_textView6"
			        android:inputType="numberDecimal"
			        android:minWidth="100dip"/>
			    
			     <SeekBar
			        android:id="@+id/actBuy_seekBar6"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignBottom="@+id/actBuy_textView6"
			        android:layout_centerInParent="true"
			        android:layout_marginLeft="2dip"
			        android:layout_marginRight="2dip"
			        android:layout_marginBottom="8dip"
			        android:layout_toRightOf="@+id/actBuy_editText6" />
			     
			     <TextView
			        android:id="@+id/actBuy_textView7"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/actBuy_textView6"
			        android:layout_marginTop="40dip"
			        android:text="@string/yearlyMaint"
			        android:textSize="15sp"/>
			
			    <EditText
			        android:id="@+id/actBuy_editText7"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignLeft="@+id/actBuy_editText6"
			        android:layout_alignBottom="@+id/actBuy_textView7"
			        android:inputType="numberDecimal"
			        android:minWidth="100dip"/>
			    
			     <SeekBar
			        android:id="@+id/actBuy_seekBar7"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignBottom="@+id/actBuy_textView7"
			        android:layout_centerInParent="true"
			        android:layout_marginLeft="2dip"
			        android:layout_marginRight="2dip"
			        android:layout_marginBottom="8dip"
			        android:layout_toRightOf="@+id/actBuy_editText7" />
			     
			     <TextView
			        android:id="@+id/actBuy_textView8"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/actBuy_textView7"
			        android:layout_marginTop="40dip"
			        android:text="@string/yearlyPropIns"
			        android:textSize="15sp"/>
			
			    <EditText
			        android:id="@+id/actBuy_editText8"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignLeft="@+id/actBuy_editText7"
			        android:layout_alignBottom="@+id/actBuy_textView8"
			        android:inputType="numberDecimal"
			        android:minWidth="100dip"/>
			    
			     <SeekBar
			        android:id="@+id/actBuy_seekBar8"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignBottom="@+id/actBuy_textView8"
			        android:layout_centerInParent="true"
			        android:layout_marginLeft="2dip"
			        android:layout_marginRight="2dip"
			        android:layout_marginBottom="8dip"
			        android:layout_toRightOf="@+id/actBuy_editText8" />
			
			</RelativeLayout>
		
		</RelativeLayout>
		
	    <View
	        android:id="@+id/actBuy_periExpDivider"
			android:layout_width="fill_parent"
			android:layout_below="@+id/actBuy_layoutYearlyBorder"
			android:layout_marginTop="20dip"
			android:layout_height="1dp"
			android:background="@android:color/darker_gray"/>
		
	    <RelativeLayout
	         android:id="@+id/actBuy_layoutPeriBorder"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_below="@+id/actBuy_periExpDivider">
	     
		     <RelativeLayout
		         android:id="@+id/actBuy_layoutPeriTitle"
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content"
		         android:layout_marginTop="20dip"
		         android:gravity="center_vertical|center_horizontal">
		         
		        <TextView
		            android:id="@+id/actBuy_textPeriTitle"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentLeft="true" 
		            android:text="@string/periExpenses"
		            android:textColor="#ff33b5e5"
		            android:textStyle="bold"/>
		        
		       <ImageView
		            android:id="@+id/actBuy_imagePeriArrow"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true" 
		            android:layout_marginRight="20dp"
		            android:src="@android:drawable/arrow_down_float" />
		         
		     </RelativeLayout>
		     
		    <RelativeLayout
		        android:id="@+id/actBuy_layoutPeriContent"
		        android:visibility="gone"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/actBuy_layoutPeriTitle" > 
	     
			    <TextView
			        android:id="@+id/actBuy_textView9"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="20dip"
			        android:text="@string/mortInsRate"
			        android:textSize="15sp"/>
			
			    <EditText
			        android:id="@+id/actBuy_editText9"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignBottom="@+id/actBuy_textView9"
		        	android:layout_toRightOf="@+id/actBuy_textView9"
		        	android:layout_marginLeft="0dip"
			        android:inputType="numberDecimal"
			        android:minWidth="100dip"/>
			    
			     <SeekBar
			        android:id="@+id/actBuy_seekBar9"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignBottom="@+id/actBuy_textView9"
			        android:layout_centerInParent="true"
			        android:layout_marginLeft="2dip"
			        android:layout_marginRight="2dip"
			        android:layout_marginBottom="8dip"
			        android:layout_toRightOf="@+id/actBuy_editText9" />   
			        
			   <TextView
			        android:id="@+id/actBuy_textView10"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/actBuy_textView9"
			        android:layout_marginTop="40dip"
			        android:text="@string/closingCost"
			        android:textSize="15sp"/>
			
			    <EditText
			        android:id="@+id/actBuy_editText10"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignLeft="@+id/actBuy_editText9"
			        android:layout_alignBottom="@+id/actBuy_textView10"
			        android:inputType="numberDecimal"
			        android:minWidth="100dip"/>
			    
			     <SeekBar
			        android:id="@+id/actBuy_seekBar10"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignBottom="@+id/actBuy_textView10"
			        android:layout_centerInParent="true"
			        android:layout_marginLeft="2dip"
			        android:layout_marginRight="2dip"
			        android:layout_marginBottom="8dip"
			        android:layout_toRightOf="@+id/actBuy_editText10" />
			     
				<TextView
			        android:id="@+id/actBuy_textView11"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/actBuy_textView10"
			        android:layout_marginTop="40dip"
			        android:text="@string/apprRate"
			        android:textSize="15sp"/>
			
			    <EditText
			        android:id="@+id/actBuy_editText11"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignLeft="@+id/actBuy_editText10"
			        android:layout_alignBottom="@+id/actBuy_textView11"
			        android:inputType="numberDecimal"
			        android:minWidth="100dip"/>
			    
			     <SeekBar
			        android:id="@+id/actBuy_seekBar11"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignBottom="@+id/actBuy_textView11"
			        android:layout_centerInParent="true"
			        android:layout_marginLeft="2dip"
			        android:layout_marginRight="2dip"
			        android:layout_marginBottom="8dip"
			        android:layout_toRightOf="@+id/actBuy_editText11" />
			     
			</RelativeLayout>
			
		</RelativeLayout>
		
	    <View
	        android:id="@+id/actBuy_bottomDivider"
			android:layout_width="fill_parent"
			android:layout_below="@+id/actBuy_layoutPeriBorder"
			android:layout_marginTop="20dip"
			android:layout_height="1dp"
			android:background="@android:color/darker_gray"/>

    </RelativeLayout>

</ScrollView>

